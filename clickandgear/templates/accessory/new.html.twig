{# templates/accessory/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Ajouter un Accessoire{% endblock %}

{% block body %}
    <h1>Ajouter un nouvel accessoire</h1>

    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.categorie) }}
        {{ form_row(form.description) }}
        {{ form_row(form.prix) }}
        {{ form_row(form.stock) }}
        {{ form_row(form.image) }}
        <button class="btn">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}
